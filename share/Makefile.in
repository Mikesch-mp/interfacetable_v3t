#===================================#
# Makefile for interfacetable_v3t
#===================================#

# Source directories
SRC_SBIN=@srcdir@/sbin
SRC_ETC=@srcdir@/etc
SRC_LIBEXEC=@srcdir@/libexec
SRC_LIB=@srcdir@/lib
SRC_SHARE=@srcdir@/share

# Installation directories
prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
etcdir=@sysconfdir@
sharedir=@datarootdir@
INSTALL=@INSTALL@
INSTALL_OPTS=@INSTALL_OPTS@

# Programs
CP=@CP@
GREP=@GREP@
@SET_MAKE@

#Http server
httpd_conf=@httpd_conf@
apache_user=@apache_user@
apache_authname=@apache_authname@
#Sudo specific
sudoers=@sudoers@
#Software configuration
nagios_base=@nagios_base@
nagios_libexec=@nagios_libexec@
cachedir=@cachedir@
statedir=@statedir@
htmldir=@htmldir@
htmlurl=@htmlurl@
cgidir=@cgidir@
cgiurl=@cgiurl@

clean:
	-rm -f *.cfg core
	-rm -f *~ *.*~ */*~ */*.*~
	-rm -f config.log config.status config.cache

distclean: clean
	-rm -f Makefile

install:
	$(INSTALL) -m 755 $(INSTALL_OPTS) -d $(sharedir)
	$(INSTALL) -m 755 $(INSTALL_OPTS) -d $(sharedir)/css
	$(INSTALL) -m 755 $(INSTALL_OPTS) -d $(sharedir)/img
	$(INSTALL) -m 755 $(INSTALL_OPTS) -d $(sharedir)/js
	$(INSTALL) -m 755 $(INSTALL_OPTS) -d $(sharedir)/tables
	
	for file in css/*; \
	    do $(INSTALL) -m 644 $(INSTALL_OPTS) $$file $(sharedir)/css; done
	
	for file in img/*; \
	    do $(INSTALL) -m 644 $(INSTALL_OPTS) $$file $(sharedir)/img; done
	
	for file in js/*; \
	    do $(INSTALL) -m 644 $(INSTALL_OPTS) $$file $(sharedir)/js; done
	
	for file in tables/*; \
	    do $(INSTALL) -m 644 $(INSTALL_OPTS) $$file $(sharedir)/tables; done

install-apache-config:
	
install-sudo-config:

fullinstall: install install-apache-config install-sudo-config
	
	
	