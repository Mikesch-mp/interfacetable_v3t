        logger(2, "  CacheTimer=".$grefhCurrent->{MD}->{If}->{"$ifName"}->{CacheTimer});

        # remember change time of the interface property
        if ($grefhFile->{MD}->{If}->{"$ifName"}->{ifStatusChangeTime}) {
