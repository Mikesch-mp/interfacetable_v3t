#===================================#
# Makefile for interfacetable_v3t
#===================================#

# Source directories
SRC_SBIN=@srcdir@/sbin
SRC_ETC=@srcdir@/etc
SRC_LIBEXEC=@srcdir@/libexec
SRC_LIB=@srcdir@/lib
SRC_SHARE=@srcdir@/share

# Installation directories
prefix=@prefix@
exec_prefix=@exec_prefix@
INSTALL=@INSTALL@
INSTALL_OPTS=@INSTALL_OPTS@

# Programs
CP=@CP@
GREP=@GREP@
@SET_MAKE@

#Http server
httpd_conf=@httpd_conf@
apache_user=@apache_user@
apache_authname=@apache_authname@
#Sudo specific
sudoers=@sudoers@
#Software configuration
nagios_base=@nagios_base@
nagios_libexec=@nagios_libexec@
cachedir=@cachedir@
statedir=@statedir@
htmldir=@htmldir@
htmlurl=@htmlurl@
cgidir=@cgidir@
cgiurl=@cgiurl@

clean:
	-rm -f check_interface_table_v3t.pl

distclean: clean
	-rm -f Makefile

install:
	$(INSTALL) -m 755 $(INSTALL_OPTS) -d $(nagios_libexec)
	$(INSTALL) -m 755 $(INSTALL_OPTS) -d $(nagios_libexec)/libexec
	$(INSTALL) -m 755 $(INSTALL_OPTS) check_interface_table_v3t.pl $(nagios_libexec)/check_interface_table_v3t.pl

install-apache-config:
    
install-sudo-config:

fullinstall: install install-apache-config install-sudo-config